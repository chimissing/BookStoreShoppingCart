@using Microsoft.AspNet.Identity
@model IEnumerable<BookStoreShoppingCart.Models.Order>

@{
    ViewBag.Title = "Index";

}

<h2>訂單列表</h2>

<table class="table">
    <tr>
        <th>購買會員</th>
        <th>收貨人姓名</th>
        <th>收貨人電話</th>
        <th>收貨人住址</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.GetUserName()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiverName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiverPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiverAddress)
            </td>
            <td>
                @Html.ActionLink("訂單明細", "Details", new { id = item.Id }
             , new { @class = "btn btn-default" })
            </td>
        </tr>
    }
</table>

